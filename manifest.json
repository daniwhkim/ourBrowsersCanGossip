{
  "name": "Our Browsers Can Gossip",
  "manifest_version": 2,
  "version": "1",

  "background": {
    "scripts": ["firebase.js", "background.js"]
  },

  "browser_action": {
    "default_title": "Our Browsers Can Gossip",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab", "<all_urls>"
  ]
}
